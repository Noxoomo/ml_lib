{
  "model": {
    "conv": {
      "model_arch": "SmallNet",
      "device": "GPU"
    },
    "classifier": {
      "main": {
        "model_arch": "Polynom",
        "lambda": 0.1,
        "monom_type": "SigmoidProbMonom",
        "device": "GPU"
      }
    }
  },

  "checkpoint_file": "small_net_catboost_checkpoint.pt",
  "batch_size": 128,
  "reports_per_epoch": 10,
  "n_iterations": [20, 5, 1],
  "sgd_step": 0.1,
  "dropout": 0.0,

  "dataset": {
    "name": "cifar-10",
    "base_classes": [0, 1, 2, 8, 9],
    "training_limit": -1,
    "test_limit": -1
  },

  "catboost_params": {
    "auto_train_scale": true,
    "init_params": {
      "boosting_type": "Plain",
      "iterations" : 1000,
      "depth" : 6,
      "devices": "0",
      "task_type": "GPU",
      "gpu_ram_part": 0.5,
      "eval_metric": "Accuracy",
      "od_type": "IncToDec",
      "loss_function": "MultiClass",
      "learning_rate" : 0.001,
      "use_best_model": false,
      "feature_border_type": "Uniform",
      "rsm": 1,
      "random_strength": 1,
      "bootstrap_type": "Bernoulli",
      "subsample": 1,
      "leaf_estimation_method": "Simple",
      "logging_level" : "Debug",
      "metric_period": 100
    },
    "intermediate_params": {
      "boosting_type": "Plain",
      "iterations" : 300,
      "depth" : 6,
      "devices": "0",
      "task_type": "GPU",
      "gpu_ram_part": 0.5,
      "eval_metric": "Accuracy",
      "od_type": "IncToDec",
      "loss_function": "MultiClass",
      "learning_rate" : 0.01,
      "use_best_model": false,
      "feature_border_type": "Uniform",
      "rsm": 1,
      "random_strength": 1,
      "bootstrap_type": "Bernoulli",
      "subsample": 1,
      "leaf_estimation_method": "Simple",
      "metric_period": 100
    },
    "final_params": {
      "boosting_type": "Plain",
      "iterations" : 600,
      "depth" : 6,
      "gpu_ram_part": 0.5,
      "task_type": "GPU",
      "devices": "0",
      "eval_metric": "Accuracy",
      "od_type": "IncToDec",
      "loss_function": "MultiClass",
      "learning_rate" : 0.005,
      "logging_level" : "Verbose",
      "feature_border_type": "Uniform",
      "rsm" : 0.5
    }
  },

  "scheduled_param_modifiers": [
    {
      "field": "sgd_step",
      "type": "double",
      "values": [0.01, 0.01, 0.001],
      "iters": [0, 3, 5]
    },
    {
      "field": "catboost_params.intermediate_params.learning_rate",
      "type": "double",
      "values": [0.0001, 0.001],
      "iters": [0, 5]
    },
    {
      "field": "catboost_params.intermediate_params.iterations",
      "type": "int",
      "values": [1000, 2000],
      "iters": [0, 5]
    },
    {
      "field": "catboost_params.intermediate_params.depth",
      "type": "int",
      "values": [6, 6, 6, 6, 6],
      "iters": [0, 2, 4, 6, 8]
    }
  ]
}